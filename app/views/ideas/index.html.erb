<h1>All ideas</h1>
<ul>
<% @ideas.each do |idea| %>
<li>
<%= idea.id %>
<%= idea.name %>
<%= idea.description %>
<%= link_to "Show", idea_path(idea) %>
<%= link_to "edit", edit_idea_path(idea) %>
<%= link_to "remove", idea_path(idea), method: :delete, data: { confirm: 'are you sure'} %> 
</li>
<% end %>
</ul>
<%= link_to "new", new_idea_path %>  